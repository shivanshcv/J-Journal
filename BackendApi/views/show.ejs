<h1>Show Page</h1>
<h2><%= blog.title %></h2>
<p><%= blog.createdDate.toDateString() %></p>
<img src="<%= blog.image %>">
<p><%= blog.description %></p>
<a href="/blogs/<%= blog._id %>/edit">Edit</a>
<% blog.comment.forEach(function(comment){ %>
    <p><%= comment.name %></p>
    <p><%= comment.comment %></p>
<% }) %>
<form action="/blogs/<%= blog._id %>" method="POST">
    <input tpe="text" placeholder="name" name="name">
    <input type="text" placeholder="type your comment here" name="comment">
    <button type="submit">Add Comment</button>
</form>

<form action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
<button type="submit">Delete</button>
</form>